<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI_Control_Assignment.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI_Control_Assignment"
    Shell.FlyoutBehavior="Disabled"
    Title="MAUI_Control_Assignment"
    BackgroundColor="#5b5b5b">

    <TabBar>
        <ShellContent
            Icon="homeicon.png"
            Title="Library"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Icon="notificationsicon.png"
            Title="NewRelease"
            ContentTemplate="{DataTemplate local:NewRelease}"
            Route="NewRelease" />
        <ShellContent
            Icon="notificationhistory.png"
            Title="History"
            ContentTemplate="{DataTemplate local:History}"
            Route="History"/>
        <ShellContent
            Icon="searchicon.png"
            Title="Explore"
            ContentTemplate="{DataTemplate local:Explore}"
            Route="Explore"/>
        <ShellContent
            Icon="hamburgericon.png"
            Title="More"
            ContentTemplate="{DataTemplate local:More}"
            Route="More"/>
    </TabBar>


</Shell>
